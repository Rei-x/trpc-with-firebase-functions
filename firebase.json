{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "rewrites": [
      {
        "source": "/trpc",
        "function": "trpc"
      }
    ]
  },
  "functions": [
    {
      "source": "src/server",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "src",
        "emulator_data",
        "tsconfig.json",
        "tsup.config.ts",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
    }
  ],
  "emulators": {
    "singleProjectMode": true,
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    }
  }
}
